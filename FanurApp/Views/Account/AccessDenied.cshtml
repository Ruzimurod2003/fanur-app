@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Access Denied</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/dist/font/bootstrap-icons.min.css" />
</head>
<body>
    <div class="w3-display-middle text-center">
        <h1 class="w3-jumbo w3-animate-top w3-center"><code>@Localizer["access_denied"]</code></h1>
        <hr class="w3-border-white w3-animate-left" style="margin:auto;width:50%">
        <h3 class="w3-center w3-animate-right">@Localizer["you_dont_have_permission_to_view_this_site"]</h3>
        <h3 class="w3-center w3-animate-zoom">🚫🚫🚫🚫</h3>
        <a class="btn btn-primary text-center items-center" asp-action="Index" asp-controller="Home">
            <i class="bi bi-house-gear"></i>
            @Localizer["go_to_home"]
        </a>
    </div>
    <style>
        body {
            background-color: black;
            color: white;
        }

        h1 {
            color: red;
        }

        h6 {
            color: red;
            text-decoration: underline;
        }

    </style>
</body>
</html>