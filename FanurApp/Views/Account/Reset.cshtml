@model ResetVM

<div class="card-body p-5">
    <h1 class="fs-4 card-title fw-bold mb-4">Parolini tiklaymiza...</h1>
    <form method="post" asp-controller="Account" asp-action="Register">
        <div class="mb-3">
            <label class="mb-2 text-muted" asp-for="NewPassword">Yangi parolini kiritasan...</label>
            <input class="form-control" type="password" asp-for="NewPassword" required autofocus>
            <div class="invalid-feedback">
                Parolni to'g'ri kirit bratishka
            </div>
        </div>

        <div class="mb-3">
            <label class="mb-2 text-muted" asp-for="ConfirmPassword">Manashu parolini kiritasan...</label>
            <input class="form-control" asp-for="ConfirmPassword" type="password" required>
            <div class="invalid-feedback">
                Parolini ikkinchisini ham to'g'irlab kirit
            </div>
        </div>

        <div class="d-flex align-items-center">
            <button class="btn btn-primary ms-auto" type="submit">
                Parolini tiklaymiza
            </button>
        </div>
    </form>
</div>