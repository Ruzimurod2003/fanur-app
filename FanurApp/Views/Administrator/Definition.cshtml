@using FanurApp.Enums;
@model DefinitionVM

<form class="needs-validation" method="post" asp-controller="Administrator" asp-action="Definition" novalidate="" autocomplete="off">
    <partial name="~/Views/PartialComponents/_AlertMessage.cshtml" model="Model.ErrorMessage" />
    <div class="mb-3">
        <input class="form-control" asp-for="Id" type="hidden">
    </div>
    <div class="mb-3">
        <label class="mb-2 text-muted" asp-for="TopicId">Definitionni nomini kiritasan... </label>
        <select class="form-select" asp-for="TopicId" asp-items="Model.Topics" required autofocus>
        </select>
        <div class="invalid-feedback">
            Definition nomi to'g'ri emas
        </div>
    </div>
    <div class="mb-3">
        <label class="mb-2 text-muted" asp-for="HMTLText">HMTLText nomini kiritasan... </label>
        <input class="form-control" asp-for="HMTLText" type="text" required autofocus>
        <div class="invalid-feedback">
            HMTLText nomi to'g'ri emas
        </div>
    </div>
    <div class="mb-3">
        <label class="mb-2 text-muted" asp-for="Author">Muallifni nomini kiritasan... </label>
        <input class="form-control" asp-for="Author" type="text" required autofocus>
        <div class="invalid-feedback">
            Muallif nomi to'g'ri emas
        </div>
    </div>
    <div class="mb-3">
        <input class="btn btn-primary" type="submit" value="Saqlash" />
    </div>
</form>