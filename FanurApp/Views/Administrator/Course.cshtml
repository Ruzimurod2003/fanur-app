@model CourseVM

<form class="space-y-5" method="post" asp-controller="Administrator" asp-action="Course">
    <partial name="~/Views/PartialComponents/_AlertMessage.cshtml" model="Model.ErrorMessage" />
    <div class="mb-3">
        <input class="form-input" asp-for="Id" type="hidden">
    </div>
    <div :class="[isSubmitForm ? (form1.name ? 'has-success' : 'has-error') : '']">
        <label class="mb-2 text-muted" asp-for="Name">Kursni nomini kiritasan... </label>
        <input class="form-input" asp-for="Name" type="text">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="mb-2 text-muted" asp-for="Author">Muallifni nomini kiritasan... </label>
        <input class="form-input" asp-for="Author" type="text">
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>
    <div class="mb-3">
        <label class="mb-2 text-muted" asp-for="Description">Nima uchun bu kursni o'rganish kere?</label>
        <input class="form-input" asp-for="Description" type="text">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <input class="btn btn-primary" type="submit" value="Saqlash" />
        <a class="btn btn-success" asp-controller="Administrator" asp-action="CourseIndex">Main pagega qaytish</a>
    </div>
</form>