@model VideoIndexVM;

<partial name="~/Views/PartialComponents/_AlertMessage.cshtml" model="Model.Message" />

<a class="btn btn-info" asp-controller="Administrator" asp-action="Video" asp-route-id="0">Yangi videoni yaratish</a>
<a class="btn btn-success" asp-controller="Administrator" asp-action="VideoIndex">Sahifani yangilash</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Manzili</th>
            <th>Qaysi mavzuga tegishli</th>
            <th>Captioni</th>
            <th>Muallifi</th>
            <th>Yaratilgan vaqti</th>
            <th>O'zgartirilgan vaqti</th>
            <th>Tahrirlash</th>
            <th>O'chirish</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var video in Model.Videos)
        {
            <tr>
                <th>@video.Id</th>
                <th>@video.URLName</th>
                <th>@video.TopicName</th>
                <th>@video.Caption</th>
                <th>@video.Author</th>
                <th>@video.CreatedDate</th>
                <th>@video.UpdatedDate</th>
                <th>
                    <a class="btn btn-warning" asp-controller="Administrator" asp-action="Video"
                       asp-route-id="@video.Id">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </th>
                <th>
                    <form method="post" asp-controller="Administrator" asp-action="DeleteVideo"
                          asp-route-id="@video.Id">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-layout-text-sidebar-reverse"></i>
                        </button>
                    </form>
                </th>
            </tr>
        }
    </tbody>
</table> 