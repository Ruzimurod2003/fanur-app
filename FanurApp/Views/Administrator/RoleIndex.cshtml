@model RoleIndexVM;
@{
    int count = Model.Roles.Count;
    int page = 1;
}

<partial name="~/Views/PartialComponents/_AlertMessage.cshtml" model="Model.Message" />
<div class="mb-5 flex items-center gap-2">
    <a class="btn btn-info gap-2" asp-controller="Administrator" asp-action="Role" asp-route-id="0">
        Yangi Role yaratish
    </a>
    <a class="btn btn-success gap-2" asp-controller="Administrator" asp-action="RoleIndex">Sahifani yangilash</a>
</div>

@while (page != ((count - 1) / 3 + 2))
{
    <div class="max-w-[320px] md:max-w-[990px] mx-auto">
        <div class="md:flex justify-betwen md:space-y-0 rtl:space-x-reverse">
            @foreach (var role in Model.Roles.Skip((page - 1) * 3).Take(3).ToList())
            {
                <div class="border border-black dark:border-[#1b2e4b] text-center rounded group hover:border-primary">
                    <div class="py-7 px-6">
                        <h4 class="text-[#3b3f5c] text-xl font-semibold mb-4 dark:text-white-light">@role.Name</h4>
                        <br />
                        <div class="mb-5 flex items-center gap-2">
                            <a class="btn btn-warning gap-2" asp-controller="Administrator" asp-action="Role"
                               asp-route-id="@role.Id">
                                <i class="bi bi-pencil-square"></i>Tahrirlash
                            </a>
                            <form method="post" asp-controller="Administrator" asp-action="DeleteRole"
                                  asp-route-id="@role.Id">
                                <button type="submit" class="btn btn-danger gap-2">
                                    <i class="bi bi-trash3"></i>O'chirish
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    page = page + 1;
}