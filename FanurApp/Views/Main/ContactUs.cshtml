<div class="rbt-contact-address">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="thumbnail">
                    <img class="w-100 radius-6" src="~/lib/main_template/assets/images/fanur/girl_1.png" alt="Contact Images">
                </div>
            </div>

            <div class="col-lg-6">
                <div class="rbt-contact-form contact-form-style-1 max-width-auto">
                    <div class="section-title text-start">
                        <span class="subtitle bg-primary-opacity">Talim barcha uchun</span>
                    </div>
                    <h3 class="title">Biz bilan aloqa qilish uchun quyidagilarni to'ldiring</h3>
                    <form asp-action="ContactUs" asp-controller="Main" method="post" class="rainbow-dynamic-form max-width-auto">
                        <div class="form-group">
                            <input asp-for="ContactName" required type="text">
                            <label>Ismingizni kiriting</label>
                            <span class="focus-border"></span>
                            <span class="text-danger" asp-validation-for="ContactName"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ContactPhone" required type="tel">
                            <label>Telefon nomeringizni kiriting</label>
                            <span class="focus-border"></span>
                            <span class="text-danger" asp-validation-for="ContactPhone"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Subject" required type="text">
                            <label>Qanaqa mavzuda gapirmoqchisiz?</label>
                            <span class="focus-border"></span>
                            <span class="text-danger" asp-validation-for="Subject"></span>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Message" required></textarea>
                            <label>Habarni xatolarsiz to'girlab yozing</label>
                            <span class="focus-border"></span>
                            <span class="text-danger" asp-validation-for="Message"></span>
                        </div>
                        <div class="form-submit-group">
                            <button class="rbt-btn btn-md btn-gradient hover-icon-reverse w-100" onclick="this.form.submit();">
                                <span class="icon-reverse-wrapper">
                                    <span class="btn-text">Jo'natish</span>
                                    <span class="btn-icon"><i class="feather-arrow-right"></i></span>
                                    <span class="btn-icon"><i class="feather-arrow-right"></i></span>
                                </span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

