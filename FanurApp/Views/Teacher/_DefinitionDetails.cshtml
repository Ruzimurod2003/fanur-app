@model DefinitionVM

<div class="modal fade" id="definitionDetailsModal_@Model.Id" tabindex="-1"
     aria-labelledby="definitionDetailsModalLabel_@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="definitionDetailsModalLabel_@Model.Id">@Model.TopicName ni tahrirlash</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.Raw(Model.HMTLText)
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiqish</button>
            </div>
        </div>
    </div>
</div>